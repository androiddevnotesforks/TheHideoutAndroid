<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.austinhodak.thehideout">

    <application
        android:name=".Application"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TheHideout.Launcher">
        <activity
            android:name=".NavActivity"
            android:exported="true"
            android:label="@string/title_activity_nav"
            android:theme="@style/Theme.TheHideout.Launcher.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".clothing.ClothingDetailActivityC"
            android:theme="@style/Theme.TheHideoutCompose" />
        <activity
            android:name=".settings.SettingsActivity"
            android:theme="@style/Theme.TheHideout.NoActionBar" />
        <activity
            android:name=".calculator.pickers.CalculatorPickerActivity"
            android:theme="@style/Theme.TheHideout.NoActionBar" />
        <activity
            android:name=".ammunition.AmmoDetailActivity"
            android:theme="@style/Theme.TheHideout.NoActionBar" />
        <activity
            android:name=".flea_market.detail.FleaItemDetail"
            android:exported="true"
            android:theme="@style/Theme.TheHideout.NoActionBar" />
        <activity
            android:name=".quests.QuestDetailActivity"
            android:theme="@style/Theme.TheHideout.NoActionBar" />
        <activity
            android:name=".quests.inraid.QuestInRaidActivity"
            android:theme="@style/Theme.TheHideout.NoActionBar" />
        <activity
            android:name=".flea_market.detail.FleaItemDetailActivity"
            android:theme="@style/Theme.TheHideout.NoActionBar" />
        <activity
            android:name=".calculator.CalculatorMainActivity"
            android:theme="@style/Theme.TheHideout.NoActionBar" />
        <activity
            android:name=".weapons.detail.WeaponDetailActivity"
            android:theme="@style/Theme.TheHideout.NoActionBar" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name">


            <meta-data
                android:name="android.app.shortcuts"
                android:resource="@xml/shortcuts" />
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_icon"
            android:resource="@drawable/hideout_shadow_1" />
        <meta-data
            android:name="com.google.mlkit.vision.DEPENDENCIES"
            android:value="ocr" />

        <service
            android:name=".firebase.MessagingService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
    </application>

</manifest>