<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.austinhodak.thehideout">

    <application
        android:name=".Application"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TheHideout.Launcher">
        <activity
            android:name=".quests.inraid.QuestInRaidActivity"
            android:theme="@style/Theme.TheHideout.NoActionBar"/>
        <activity
            android:name=".flea_market.FleaItemDetailActivity"
            android:theme="@style/Theme.TheHideout.NoActionBar" />
        <activity
            android:name=".calculator.CalculatorMainActivity"
            android:theme="@style/Theme.TheHideout.NoActionBar" />
        <activity
            android:name=".weapons.WeaponDetailActivity"
            android:theme="@style/Theme.TheHideout.NoActionBar" />
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_icon"
            android:resource="@drawable/hideout_shadow_1" />

        <service
            android:name=".firebase.MessagingService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
    </application>

</manifest>