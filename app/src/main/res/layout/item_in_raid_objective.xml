<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="item"
            type="com.austinhodak.thehideout.quests.inraid.models.Category.Objective" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp">

        <TextView
            android:id="@+id/inRaidObjectiveTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"

            android:layout_marginEnd="16dp"
            android:fontFamily="@font/bender"
            android:textColor="@color/primaryText87"
            app:layout_constraintBottom_toTopOf="@+id/inRaidObjectiveSubtitle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed"
            tools:text="Kill 2 PMCs (1/3)" />

        <TextView
            android:id="@+id/inRaidObjectiveSubtitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:fontFamily="@font/bender_light"
            android:textColor="@color/primaryText60"
            android:textSize="12sp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/inRaidObjectiveTitle"
            app:layout_constraintTop_toBottomOf="@+id/inRaidObjectiveTitle"
            tools:text="With a headshot from more than 100 meters" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>