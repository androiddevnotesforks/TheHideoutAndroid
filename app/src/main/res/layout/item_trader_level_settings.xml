<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:adjustViewBounds="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/prapor_portrait" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/bender_bold"
                android:text="Prapor"
                android:textColor="@color/primaryText87"
                android:textSize="18sp"
                app:layout_constraintBottom_toTopOf="@+id/chipGroup"
                app:layout_constraintStart_toEndOf="@+id/imageView"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chipGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginBottom="8dp"
                app:checkedChip="@id/chip_ll1"
                app:chipSpacingHorizontal="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/imageView"
                app:layout_constraintTop_toBottomOf="@+id/textView4"
                app:selectionRequired="true"
                app:singleSelection="true">

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_ll1"
                    style="@style/ChipStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="LL1"
                    android:textAppearance="@style/TabsBender"
                    android:textSize="12sp"
                    app:chipBackgroundColor="@color/chip_trader_setting" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_ll2"
                    style="@style/ChipStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="LL2"
                    android:textAppearance="@style/TabsBender"
                    android:textSize="12sp"
                    app:chipBackgroundColor="@color/chip_trader_setting" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_ll3"
                    style="@style/ChipStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="LL3"
                    android:textAppearance="@style/TabsBender"
                    android:textSize="12sp"
                    app:chipBackgroundColor="@color/chip_trader_setting" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_ll4"
                    style="@style/ChipStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="LL4"
                    android:textAppearance="@style/TabsBender"
                    android:textSize="12sp"
                    app:checkedIcon="@drawable/icons8_crown_96"
                    app:checkedIconVisible="true"
                    app:chipBackgroundColor="@color/chip_trader_setting"
                    app:chipIcon="@drawable/icons8_crown_96"
                    app:chipIconSize="16dp"
                    app:chipIconTint="#FF9800"
                    app:chipIconVisible="true"
                    app:chipStartPadding="12dp" />

            </com.google.android.material.chip.ChipGroup>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>