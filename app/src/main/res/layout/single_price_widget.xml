<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/Widget.TheHideout.AppWidget.Container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="16dp"
    android:id="@+id/single_price_layout"
    android:theme="@style/Theme.TheHideout.Launcher.AppWidgetContainer">

    <ImageView
        android:src="@drawable/btc_sample_icon"
        android:id="@+id/single_price_image"
        android:layout_width="wrap_content"
        android:layout_height="42dp"
        android:adjustViewBounds="true" />

    <TextView
        android:id="@+id/single_price_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_weight="1"
        android:fontFamily="@font/bender_bold"
        android:gravity="center"
        android:maxLines="1"
        android:text="123,577$"
        android:textColor="@color/white"
        android:textStyle="bold" />

</LinearLayout>