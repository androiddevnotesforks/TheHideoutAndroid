<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.TheHideout.Launcher">
        <item name="android:windowBackground">@drawable/launch_screen</item>
        <item name="android:statusBarColor" tools:targetApi="l">#1F1F1F</item>
    </style>

    <style name="TabsBender" parent="TextAppearance.AppCompat.Body1">
        <item name="android:fontFamily">@font/bender_bold</item>
    </style>

    <style name="DrawerArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="ChipStyle" parent="@style/Widget.MaterialComponents.Chip.Choice">

    </style>

    <style name="Widget.MaterialDrawerStyleLight" parent="Widget.MaterialDrawerStyle">
        <item name="materialDrawerDividerColor">@color/md_grey_200</item>
    </style>


    <style name="actionOverflowButtonStyle" parent="@style/Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">@color/white</item>
    </style>

    <style name="Toolbar" parent="ThemeOverlay.MaterialComponents.Dark">
        <item name="android:fontFamily">@font/bender_bold</item>
        <item name="popupTheme">@style/Theme.TheHideout.AppBarOverlay</item>
        <item name="actionOverflowButtonStyle">@style/actionOverflowButtonStyle</item>
    </style>

    <style name="Theme.TheHideout.NoActionBar">
        <item name="android:windowContentTransitions">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.TheHideout.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:fontFamily">@font/bender</item>
    </style>

</resources>