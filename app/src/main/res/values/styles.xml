<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.TheHideout.Launcher">
        <item name="android:windowBackground">@drawable/launch_screen</item>
    </style>

    <style name="TabsBenderLight" parent="TextAppearance.AppCompat.Body1">
        <item name="android:fontFamily">@font/bender_light</item>
    </style>

    <style name="TabsBender" parent="TextAppearance.AppCompat.Body1">
        <item name="android:fontFamily">@font/bender_bold</item>
    </style>

    <style name="BottomNavSelected" parent="TextAppearance.AppCompat.Body1">
        <item name="android:fontFamily">@font/bender_bold</item>
        <item name="android:textColor">@drawable/bottom_nav_selector_text</item>
    </style>

    <style name="BottomNavUnSelected" parent="TextAppearance.AppCompat.Body1">
        <item name="android:fontFamily">@font/bender</item>
        <item name="android:textColor">@drawable/bottom_nav_selector_text</item>
    </style>

    <style name="DrawerArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="BottomNavigation" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemIconTint">@drawable/bottom_nav_selector</item>
        <item name="itemTextAppearanceActive">@style/BottomNavSelected</item>
        <item name="itemTextAppearanceInactive">@style/BottomNavUnSelected</item>
    </style>

    <style name="ChipStyle" parent="@style/Widget.MaterialComponents.Chip.Choice">
<!--        <item name="chipBackgroundColor">@color/chip_orange</item>-->
    </style>

    <style name="Widget.MaterialDrawerStyleLight" parent="Widget.MaterialDrawerStyle">
        <item name="materialDrawerDividerColor">@color/md_grey_200</item>
    </style>

</resources>