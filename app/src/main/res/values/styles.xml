<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.TheHideout.Launcher">
        <item name="android:windowBackground">@drawable/launch_screen</item>
        <item name="android:statusBarColor" tools:targetApi="l">#1F1F1F</item>
    </style>

    <style name="DrawerArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="Widget.MaterialDrawerStyleLight" parent="Widget.MaterialDrawerStyle">
        <item name="materialDrawerDividerColor">@color/md_grey_200</item>
    </style>

    <style name="actionOverflowButtonStyle" parent="@style/Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">@color/white</item>
    </style>

    <style name="Theme.TheHideout.NoActionBar">
        <item name="android:windowContentTransitions">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.TheHideout.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:fontFamily">@font/bender</item>
    </style>

    <style name="LoginTheme" parent="FirebaseUI">
        <item name="colorPrimary">#1F1F1F</item>
        <item name="colorPrimaryVariant">@color/md_red_400</item>
        <item name="colorAccent">@color/md_red_400</item>
        <item name="android:colorBackground">#1F1F1F</item>
        <item name="android:statusBarColor">#1F1F1F</item>
    </style>

    <style name="LoginTheme2" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/md_red_400</item>
        <item name="colorPrimaryVariant">@color/md_red_400</item>
        <item name="colorAccent">@color/md_red_400</item>
<!--        <item name="android:colorBackground">#1F1F1F</item>-->
        <item name="android:statusBarColor">@android:color/transparent</item>

        <item name="android:windowBackground">@drawable/login_bg</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:scaleType">centerCrop</item>

        <item name="android:fontFamily">@font/bender_bold</item>

        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowTranslucentStatus">true</item>

        <item name="android:paddingTop">4dp</item>
    </style>

</resources>