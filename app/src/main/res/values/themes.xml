<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TheHideout" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#1F1F1F</item>
        <item name="colorPrimaryVariant">@color/md_red_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/md_red_400</item>
        <item name="colorSecondaryVariant">@color/md_red_400</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->

        <item name="materialDrawerStyle">@style/Widget.MaterialDrawerStyleLight</item>
        <item name="materialDrawerHeaderStyle">@style/Widget.MaterialDrawerHeaderStyle</item>

        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>

        <item name="colorBackgroundFloating">@color/md_grey_900</item>
    </style>

    <style name="Theme.TheHideout.Launcher.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

</resources>