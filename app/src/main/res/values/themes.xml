<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TheHideout" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/md_red_500</item>
        <item name="colorPrimaryVariant">@color/md_red_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/md_red_400</item>
        <item name="colorSecondaryVariant">@color/md_red_400</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="materialDrawerStyle">@style/Widget.MaterialDrawerStyleLight</item>
        <item name="materialDrawerHeaderStyle">@style/Widget.MaterialDrawerHeaderStyle</item>

        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>

    <style name="Theme.TheHideout.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.TheHideout.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:fontFamily">@font/bender</item>

    </style>

    <style name="Theme.TheHideout.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="actionOverflowButtonStyle" parent="@style/Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">@color/white</item>
    </style>

    <style name="Toolbar" parent="ThemeOverlay.MaterialComponents.Dark">
        <item name="android:fontFamily">@font/bender_bold</item>
        <item name="popupTheme">@style/Theme.TheHideout.AppBarOverlay</item>
        <item name="actionOverflowButtonStyle">@style/actionOverflowButtonStyle</item>
    </style>

    <style name="MaterialSearchViewStyle">
        <item name="searchBackground">@color/md_red_500</item>
        <item name="searchBackIcon">@drawable/ic_baseline_arrow_back_24</item>
        <item name="android:textColor">@color/md_white_1000</item>
        <item name="searchSuggestionBackground">@drawable/timeline_round_bottom_only_large</item>
        <item name="searchSuggestionIcon">@null</item>
        <item name="searchCloseIcon">@drawable/ic_action_navigation_close_inverted</item>
    </style>
</resources>